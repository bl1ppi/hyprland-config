{
    // General Settings
    "height": 32,
    "layer": "top",
    "margin-top": 8,
    "margin-bottom": -6,
    "margin-left": 4,
    "margin-right": 4,    
    "spacing": 0,

    // Load Modules
    "include": ["~/.config/waybar/modules.json"],

    // Modules Left
    "modules-left": [
        "group/desktops",
        "mpris"
    ],

    // Modules Center
    "modules-center": [
        "clock"
    ],

    // Modules Right    
    "modules-right": [
    	"group/hardware",
    	"group/devices",
    	"tray",
    	"custom/exit"
    ]
}
